@model Exam_2016.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2 class="page-title text-center">@ViewBag.Title</h2>
<h4 class="text-center">Create a new account.</h4>
<hr />
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <section class="register-layout">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                
                @Html.ValidationSummary("", new { @class = "col-md-8 col-md-offset-2 text-danger text-center invalid-register" })

                <div class="form-group"> @*-------------------------- This is for Email*@
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-4 col-md-offset-4 text-center" })
                    <div class="col-md-8 col-md-offset-2 text-center">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group"> @*-------------------------- This is for Password*@
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-4 col-md-offset-4 text-center" })
                    <div class="col-md-8 col-md-offset-2 text-center">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group"> @*-------------------------- This is for Confirm Password*@
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-6 col-md-offset-3 text-center" })
                    <div class="col-md-8 col-md-offset-2 text-center">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group"> @*-------------------------- This is for First Name*@
                    @Html.LabelFor(m => m.FirstName, new { @class = "col-md-4 col-md-offset-4 text-center" })
                    <div class="col-md-8 col-md-offset-2 text-center">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group"> @*-------------------------- This is for Last Name*@
                    @Html.LabelFor(m => m.LastName, new { @class = "col-md-4 col-md-offset-4 text-center" })
                    <div class="col-md-8 col-md-offset-2 text-center">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                    </div>
                </div>


                <div class="form-group"> @*-------------------------- This is for Profile Picture*@

                    <label class="col-md-4 col-md-offset-4 text-center">Profile Picture</label>
                    <div class="col-md-8 col-md-offset-2 text-center">
                        @Html.TextBox("file", "", new { type = "file", @class = "text-center col-md-12" })
                    </div>
        

                    @*<input type="submit" value="Upload" />*@


                </div>

                <div class="form-group">
                    <div class="col-md-8 col-md-offset-2 text-center">
                        <input type="submit" class="btn btn-eksponent" value="Register" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
