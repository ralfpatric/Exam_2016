@model Exam_2016.Models.CompanyRole

@{
    ViewBag.Title = "Details";
}

<h2>Role Details</h2>

<p>Name: @Html.DisplayFor(modelItem => Model.Name) </p>
<p>Description: @Html.DisplayFor(modelItem => Model.Description) </p>

<h4>Employee Experience with Role</h4>

@Html.ActionLink("Add Role to Past Roles", "AddToPastRoles", new { RoleId = Model.CompanyRoleId }) |
@Html.ActionLink("Add Role to Current Roles", "AddToCurrentRoles", new { RoleId = Model.CompanyRoleId }) |
@Html.ActionLink("Add Role to Future Roles", "AddToFutureRoles", new { RoleId = Model.CompanyRoleId })

<table class="table">
    <tr>
        <th>
            Employee Name
        </th>
        <th>
            Past Experience
        </th>
        <th>
            Current assignment
        </th>
    </tr>
    @if (Model != null)
    {
        foreach (var employee in Model.Employees)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => employee.FirstName)
                </td>
                @foreach (var pastRole in employee.PastRoles)
                {
                    if (pastRole.CompanyRoleId == Model.CompanyRoleId)
                    {
                        <td>
                            @Html.DisplayFor(modelItem => pastRole.Name)
                        </td>
                    }
                }
                    @foreach (var currentRole in employee.CurrentRoles)
                    {

                        <td>
                            @if (currentRole.CompanyRoleId == Model.CompanyRoleId)
                            {
                                @Html.DisplayFor(modelItem => currentRole.Name)
                            }
                   
                        </td>
                    
                }
            </tr>
        }
    }

</table>

<h4>Role Curriculum</h4>

<table class="table">
    <tr>
        <th>
            Curriculum Text
        </th>
        <th>
            Actions
        </th>
    </tr>
    @foreach (var item in Model.Curriculum)
    {
        <tr>
            <td>
                @(item.CurriculumContent)
            </td>
            <td>
                ((To Be Implemented))
            </td>
        </tr>
    }
</table>

<h2>Add Curriculum To This Role</h2>

@using (Html.BeginForm("AddCurriculum", "Roles", FormMethod.Post))
{
    <input type="hidden" id="RoleId" name="RoleId" value="@Model.CompanyRoleId" />
    <input type="text" id="Curriculum" name="Curriculum" />
    <input type="submit" value="Add Curriculum" />
}
