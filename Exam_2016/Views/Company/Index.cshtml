            {
                <span>@Html.DisplayFor(modelItem => role.Name)</span> 
                <span>@Html.ActionLink("Details", "Details", "Roles", new { RoleId = role.CompanyRoleId }, null)</span>
                foreach (var employee in role.Employees)
                {
                    <p>
                        <span>@Html.DisplayFor(modelItem => employee.FirstName) @Html.DisplayFor(modelItem => employee.LastName)</span>
                        <span>@Html.ActionLink("Details Page", "EmployeeDetails", "Manage", new { id = employee.Id } , null)</span>
                    </p>
                }
            }*@
        }
    }

}
