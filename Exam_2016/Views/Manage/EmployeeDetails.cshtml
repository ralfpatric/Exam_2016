
@model Exam_2016.Models.Employee
@{
    ViewBag.Title = "EmployeeDetails";
}

<h2 class="page-title">Employee Details</h2>
<hr />

<div class="col-md-6">
    <dl class="dl-horizontal">
        <dt>
            First Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            Last Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Age)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Age)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Position)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Position)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Score)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Score)
        </dd>
        <dt>
            Current Roles
        </dt>
        <dd>
            @foreach (var role in Model.CurrentRoles)
            {
                <span>@Html.DisplayFor(modelItem => role.Name) - </span>
            }
        </dd>
        <dt>
            Future Roles
        </dt>
        <dd>
            @foreach (var role in Model.FutureRoles)
            {
                <span>@Html.DisplayFor(modelItem => role.Name) - </span>
            }
        </dd>

        <dt>
            Past Roles
        </dt>
        <dd>
            @foreach (var role in Model.PastRoles)
            {
                <span>@Html.DisplayFor(modelItem => role.Name) - </span>
            }
        </dd>

    </dl>

    <div class="gutter-top-x2">
        @Html.ActionLink("Edit", "EmployeeInfoEdit", new { id = Model.EmployeeId }, new { @class = "btn btn-eksponent-border"}) 
        @Html.ActionLink("Back to List", "Index", "", new { @class = "btn btn-eksponent-border" })
    </div>

</div>

<div class="col-md-6 gutter-top">    
    <img src="~/UploadedFiles/@Model.ProfilePicture" class="img-responsive img-centered img-circle text-center user-profile-picture" />
</div>