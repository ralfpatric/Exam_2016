@model Exam_2016.Models.Employee
@{
    ViewBag.Title = "UserDetail";
}

<h2>UserDetail</h2>

@using (Html.BeginForm("SaveChanges", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
